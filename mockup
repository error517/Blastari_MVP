    <script>
        // Simulate clicking channel cards to update the detailed view title and border
        const channelCards = document.querySelectorAll('.channel-card');
        const detailedPlanSection = document.getElementById('detailed-plan-view');
        const detailedPlanTitle = detailedPlanSection.querySelector('h2 span');
        const detailedPlanContent = detailedPlanSection.querySelector('.space-y-4'); // Placeholder for content update

        channelCards.forEach(card => {
            card.addEventListener('click', () => {
                // Remove active state from all cards
                channelCards.forEach(c => c.classList.remove('active', 'border-purple-500'));

                // Add active state to the clicked card
                card.classList.add('active', 'border-purple-500');

                // Update the detailed plan title (example)
                const channelName = card.querySelector('h3').textContent;
                detailedPlanTitle.textContent = channelName;

                // TODO: Fetch and display the actual plan details here
                // For this mockup, we'll just show a placeholder message or example structure
                detailedPlanContent.innerHTML = `
                    <p>Loading detailed plan for <strong>${channelName}</strong>...</p>
                    <div>
                        <h4 class="font-semibold text-gray-800 mt-4">Strategy Overview</h4>
                        <p class="text-sm">Leverage high-intent keywords through targeted Google Ads campaigns focusing on conversions...</p>
                    </div>
                    <div>
                        <h4 class="font-semibold text-gray-800 mt-4">Action Steps</h4>
                        <ul class="list-disc list-inside text-sm space-y-1">
                            <li><input type="checkbox" class="mr-2 rounded text-purple-600 focus:ring-purple-500">Keyword Research & Selection</li>
                            <li><input type="checkbox" class="mr-2 rounded text-purple-600 focus:ring-purple-500">Campaign Structure Setup</li>
                            <li><input type="checkbox" class="mr-2 rounded text-purple-600 focus:ring-purple-500">Ad Copy Creation</li>
                            </ul>
                    </div>
                     <div class="mt-6 pt-4 border-t border-gray-200">
                         <p class="text-sm text-center text-gray-500">Want to adjust this plan? Ask the AI expert! 👇</p>
                    </div>
                `;
            });
        });
    </script>

